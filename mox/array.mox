###

    array implementation (abstraction over pointer manip.)

###

class Array<T>

    var len : int
    var data : Pointer<T>

    function init(len : int)
        self.len = len
        self.data = malloc(len * @size(T))
    end

    function set<U>(index : int, element : T)
        self.data[index] = element
    end

    function get<U>(index : int) -> T
        return self.data[index]
    end

    function destroy()
        free(self.data)
    end

end